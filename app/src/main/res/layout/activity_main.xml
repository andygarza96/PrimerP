<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="+5"
            android:layout_width="60dp"
            android:layout_height="51dp"
            android:id="@+id/btn5"
            app:layout_constraintEnd_toStartOf="@+id/btn15" android:layout_marginEnd="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.695" android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/txtActual"/>
    <ImageView
            android:layout_width="168dp"
            android:layout_height="124dp" app:srcCompat="@drawable/manzanas"
            android:id="@+id/imageView" android:layout_marginTop="68dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.506"/>
    <TextView
            android:text="ProducciÃ³n Total:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtPTotal" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"/>
    <TextView
            android:text="Porcentaje:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtPorcentaje" android:layout_marginTop="52dp"
            app:layout_constraintTop_toBottomOf="@+id/btn5"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="84dp"/>
    <EditText
            android:layout_width="139dp"
            android:layout_height="43dp"
            android:inputType="number"
            android:ems="10"
            android:hint="@string/ptotal"
            android:id="@+id/etxtTotal" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView" app:layout_constraintStart_toEndOf="@+id/txtPTotal"
            android:layout_marginStart="16dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtActual" android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/etxtTotal"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="136dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtPactual" android:layout_marginTop="52dp"
            app:layout_constraintTop_toBottomOf="@+id/btn15" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="176dp" app:layout_constraintStart_toEndOf="@+id/txtPorcentaje"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="Calcular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnCalcular"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.478"
            android:layout_marginTop="56dp" app:layout_constraintTop_toBottomOf="@+id/txtPactual"/>
    <Button
            android:text="+30"
            android:layout_width="60dp"
            android:layout_height="51dp"
            android:id="@+id/btn30" android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/txtActual"
            app:layout_constraintEnd_toStartOf="@+id/btn50" android:layout_marginEnd="28dp"
    />
    <Button
            android:text="+50"
            android:layout_width="60dp"
            android:layout_height="51dp"
            android:id="@+id/btn50" android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/txtActual"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
    />
    <Button
            android:text="+15"
            android:layout_width="60dp"
            android:layout_height="51dp"
            android:id="@+id/btn15" android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/txtActual"
            app:layout_constraintEnd_toStartOf="@+id/btn30" android:layout_marginEnd="48dp"/>
    <ImageButton
            android:layout_width="65dp"
            android:layout_height="56dp" app:srcCompat="@drawable/manzanita"
            android:id="@+id/ibtnActual"
            android:scaleType="fitXY" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/ibtnTotal" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/txtActual"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.859"/>
    <ImageButton
            android:layout_width="65dp"
            android:layout_height="56dp" app:srcCompat="@drawable/manzanita"
            android:id="@+id/ibtnTotal"
            android:scaleType="fitXY" app:layout_constraintTop_toTopOf="@+id/etxtTotal"
            app:layout_constraintStart_toEndOf="@+id/etxtTotal" android:layout_marginStart="28dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>